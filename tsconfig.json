{
  "compilerOptions": {
    "rootDir": "./",
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["vite/client", "vite-plugin-pwa/client", "vitest/globals", "@testing-library/jest-dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "excalidraw-app/*": ["./src/*"],
      "@excalidraw/common": ["./packages/common/src/index.ts"],
      "@excalidraw/common/*": ["./packages/common/src/*"],
      "@excalidraw/excalidraw": ["./packages/excalidraw/index.tsx"],
      "@excalidraw/excalidraw/*": ["./packages/excalidraw/*"],
      "@excalidraw/element": ["./packages/element/src/index.ts"],
      "@excalidraw/element/*": ["./packages/element/src/*"],
      "@excalidraw/math": ["./packages/math/src/index.ts"],
      "@excalidraw/math/*": ["./packages/math/src/*"],
      "@excalidraw/utils": ["./packages/utils/src/index.ts"],
      "@excalidraw/utils/*": ["./packages/utils/src/*"]
    }
  },
  "include": ["packages", "src", "index.tsx", "global.d.ts"],
  "exclude": ["examples", "dist", "types", "tests", "node_modules"]
}
